#include <stdio.h>

int main() {
    float num1, num2, resultado;
    char operador;

    printf("=== Simple Calculator ===\n");
    printf("Enter first number: ");
    scanf("%f", &num1);

    printf("Enter operator (+, -, *, /): ");
    scanf(" %c", &operador);

    printf("Enter second number: ");
    scanf("%f", &num2);

    switch (operador) {
        case '+':
            resultado = num1 + num2;
            break;
        case '-':
            resultado = num1 - num2;
            break;
        case '*':
            resultado = num1 * num2;
            break;
        case '/':
            if (num2 != 0)
                resultado = num1 / num2;
            else {
                printf("Error: division by zero!\n");
                return 1;
            }
            break;
        default:
            printf("Invalid operator!\n");
            return 1;
    }

    printf("Resultado: %.2f %c %.2f = %.2f\n", num1, operador, num2, resultado);

    return 0;
}
